[MASTER]
ignore=.venv,__pycache__,outcomp
init-hook='import sys; from pathlib import Path; sys.path.insert(0, str((Path.cwd() / "src").resolve()))'

[MESSAGES CONTROL]
disable=
    missing-function-docstring,
    too-many-locals,
    too-many-statements,
    too-many-branches,
    too-many-arguments,
    too-many-positional-arguments,
    duplicate-code

[FORMAT]
max-line-length=100

[BASIC]
good-names=i,j,k,df,e,ve,x
